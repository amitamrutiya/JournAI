generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id
  email      String    @unique
  name       String?
  imageUrl   String?
  journals   Journal[]
  journalIds String[]  @default([])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
 
  @@map("users")
}

model Journal {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String?
  content   Json
  mood      Mood
  summary   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
  @@map("journals")
}

enum Mood {
  HAPPY
  SAD
  ANXIOUS
  NEUTRAL
  EXCITED
  ANGRY
  PEACEFUL
  GREATFUL
  GRATEFUL
  FRUSTRATED
  WORRIED
  CONTENT
  LONELY
  OVERWHELMED
  HOPEFUL
  BORED
  TIRED
}
